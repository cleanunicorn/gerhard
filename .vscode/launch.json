    "version": "0.2.0",
    "configurations": [
        {
            "name": "Draw spiral proxy",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/main.py",
            "console": "integratedTerminal",
            "args": [
                "--width=600",
                "--height=600",
                "--color=proxy",
                "--color-distance=1",
                "--method=spiral",
            ]
        },
        {
            "name": "Draw Gerhard",
